<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/gradient_alpha"
    android:elevation="2dp"
    android:orientation="vertical">

    <!-- Sab 29-12-18 221812: before is horizontal -->
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="4dp"-->
        <!--android:orientation="horizontal"-->
        <!--android:padding="6dp">-->

        <!-- Sab 29-12-18 221928: dari activity_search.xml to here because can use double View view in init in CustomSearch -->
        <!-- Sab 29-12-18 173845: linear layout -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- Sab 29-12-18 173224: switch -->
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_compat"
                android:checked="false"
                android:textColor="@android:color/white"
                android:textOff="Off"
                android:textOn="On"
                app:showText="true"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="@string/reload"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColorHint="@android:color/holo_orange_light" />

    <!--</LinearLayout>-->

</LinearLayout>