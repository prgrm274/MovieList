<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_padding_size_medium_large"
    android:orientation="vertical">

    <!-- Sab 29-12-18 221812: before is horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/elevation"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_padding_size_micro"
        android:paddingEnd="@dimen/margin_padding_size_small"
        android:paddingStart="@dimen/margin_padding_size_small"
        android:paddingTop="@dimen/margin_padding_size_micro">

        <!-- Sab 29-12-18 221928: dari activity_search.xml to here because can use double View view in init in CustomSearch -->
        <!-- Sab 29-12-18 173845: linear layout -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- Sab 29-12-18 173224: switch -->
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_compat"
                android:checked="true"
                android:textColor="@android:color/white"
                android:textOff="Unreload"
                android:textOn="Reloading.."
                app:showText="true"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:backgroundTint="@android:color/transparent"
            android:drawableEnd="@drawable/ic_search"
            android:hint="@string/hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:drawableRight="@drawable/ic_search" />

    </LinearLayout>

</LinearLayout>